generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model RefreshToken {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  email      String
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())

  userAgent  String?
  ip         String?

  @@index([email])
  @@index([expiresAt])
}
